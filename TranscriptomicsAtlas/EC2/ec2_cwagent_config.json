{
    "agent": {
        "metrics_collection_interval": 10,
        "run_as_user": "root"
    },
    "metrics": {
        "namespace": "EC2Instances/Development",
        "aggregation_dimensions": [["InstanceId"]],
        "append_dimensions": {
            "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
            "ImageId": "${aws:ImageId}",
            "InstanceId": "${aws:InstanceId}",
            "InstanceType": "${aws:InstanceType}"
        },
        "metrics_collected": {
            "procstat": [
                {
                    "exe": "prefetch.*",
                    "measurement": [
                        "cpu_time",
                        "cpu_time_idle",
                        "cpu_time_iowait",
                        "cpu_time_user",
                        "cpu_usage",
                        "memory_rss",
                        "memory_vms",
                        "memory_swap",
                        "num_threads",
                        "read_bytes",
                        "write_bytes",
                        "read_count",
                        "write_count"
                    ]
                },
                {
                    "exe": "fasterq-dump.*",
                    "measurement": [
                        "cpu_time",
                        "cpu_time_idle",
                        "cpu_time_iowait",
                        "cpu_time_user",
                        "cpu_usage",
                        "memory_rss",
                        "memory_vms",
                        "memory_swap",
                        "num_threads",
                        "read_bytes",
                        "write_bytes",
                        "read_count",
                        "write_count"
                    ]
                },
                {
                    "exe": "salmon.*",
                    "measurement": [
                        "cpu_time",
                        "cpu_time_idle",
                        "cpu_time_iowait",
                        "cpu_time_user",
                        "cpu_usage",
                        "memory_rss",
                        "memory_vms",
                        "memory_swap",
                        "num_threads",
                        "read_bytes",
                        "write_bytes",
                        "read_count",
                        "write_count"
                    ]
                },
                {
                    "exe": "R.*",
                    "measurement": [
                        "cpu_time",
                        "cpu_time_idle",
                        "cpu_time_iowait",
                        "cpu_time_user",
                        "cpu_usage",
                        "memory_rss",
                        "memory_vms",
                        "memory_swap",
                        "num_threads",
                        "read_bytes",
                        "write_bytes",
                        "read_count",
                        "write_count"
                    ]
                }
            ],
            "cpu": {
                "measurement": [
                    "cpu_usage_idle",
                    "cpu_usage_iowait",
                    "cpu_usage_user"
                ],
                "metrics_collection_interval": 10,
                "resources": [
                    "*"
                ],
                "totalcpu": true
            },
            "disk": {
                "measurement": [
                    "used_percent"
                ],
                "metrics_collection_interval": 10,
                "resources": [
                    "*"
                ]
            },
            "diskio": {
                "measurement": [
                    "io_time",
                    "write_bytes",
                    "read_bytes",
                    "writes",
                    "reads"
                ],
                "metrics_collection_interval": 10,
                "resources": [
                    "*"
                ]
            },
            "mem": {
                "measurement": [
                    "mem_used",
                    "mem_used_percent"
                ],
                "metrics_collection_interval": 10
            },
            "net": {
                "measurement": [
                    "bytes_sent",
                    "bytes_recv",
                    "packets_sent",
                    "packets_recv"
                ],
                "metrics_collection_interval": 10,
                "resources": [
                    "*"
                ]
            },
            "statsd": {
                "metrics_aggregation_interval": 0,
                "metrics_collection_interval": 10,
                "service_address": ":8125"
            },
            "swap": {
                "measurement": [
                    "swap_used_percent"
                ],
                "metrics_collection_interval": 10
            }
        }
    }
}
{
    "agent": {
        "metrics_collection_interval": 10,
        "run_as_user": "root"
    },
    "metrics": {
        "namespace": "Containers/Development",
        "force_flush_interval" : 10,
        "metrics_collected": {
            "cpu": {
                "measurement": [
                    "cpu_usage_idle",
                    "cpu_usage_iowait",
                    "cpu_usage_user",
                    "cpu_usage_system"
                ],
                "metrics_collection_interval": 10,
                "resources": [
                    "*"
                ],
                "totalcpu": true,
                "append_dimensions": {
                    "ContainerId": "$HOSTNAME"
                }
            },
            "disk": {
                "measurement": [
                    "used_percent"
                ],
                "metrics_collection_interval": 10,
                "resources": [
                    "*"
                ],
                "drop_device": true,
                "append_dimensions": {
                    "ContainerId": "$HOSTNAME"
                }
            },
            "diskio": {
                "measurement": [
                    "io_time",
                    "write_bytes",
                    "read_bytes",
                    "writes",
                    "reads"
                ],
                "metrics_collection_interval": 10,
                "resources": [
                    "*"
                ],
                "append_dimensions": {
                    "ContainerId": "$HOSTNAME"
                }
            },
            "mem": {
                "measurement": [
                    "mem_used_percent"
                ],
                "metrics_collection_interval": 10,
                "append_dimensions": {
                    "ContainerId": "$HOSTNAME"
                }
            },
            "net": {
                "measurement": [
                    "bytes_sent",
                    "bytes_recv",
                    "packets_sent",
                    "packets_recv"
                ],
                "metrics_collection_interval": 10,
                "resources": [
                    "*"
                ],
                "append_dimensions": {
                    "ContainerId": "$HOSTNAME"
                }
            },
            "statsd": {
                "metrics_aggregation_interval": 0,
                "metrics_collection_interval": 10,
                "service_address": ":8125"
            },
            "swap": {
                "measurement": [
                    "swap_used_percent"
                ],
                "metrics_collection_interval": 10,
                "append_dimensions": {
                    "ContainerId": "$HOSTNAME"
                }
            }
        }
    }
}